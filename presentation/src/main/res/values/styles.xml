<resources>

    <style name="DarkThemeApp" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SignEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/colorSignMain</item>
        <item name="colorControlNormal">@color/colorLowBlack</item>
    </style>

    <style name="SignCheckBoxTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorSignMain</item>
        <item name="android:textColorSecondary">@color/colorLowBlack</item>
    </style>

</resources>
